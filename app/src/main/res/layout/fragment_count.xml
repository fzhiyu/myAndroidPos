<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".fragment.CountFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/back_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sear_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="开始时间" />

        <EditText
            android:id="@+id/sear_endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="结束时间" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <top.androidman.SuperButton
                android:id="@+id/back_past_hour"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:color_normal="@color/lightBlue"
                app:corner="15dp"
                app:text="过去一小时"
                app:textColor="@color/white"
                app:textSize="10sp" />

            <top.androidman.SuperButton
                android:id="@+id/back_today"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                app:color_normal="@color/lightBlue"
                app:corner="15dp"
                app:text="今天"
                app:textColor="@color/white"
                app:textSize="10sp" />

            <top.androidman.SuperButton
                android:id="@+id/back_week"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                app:color_normal="@color/lightBlue"
                app:corner="15dp"
                app:text="本周"
                app:textColor="@color/white"
                app:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="查询" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sum_totalMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:text="加油总额：0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_sum_totalOrderNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单数：0"
            android:textSize="15sp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sum_oil_list"
        android:name="com.cuse.myandroidpos.CountFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.cuse.myandroidpos.activity.MainActivity"
        tools:listitem="@layout/count_item_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <Button
            android:id="@+id/btn_sum_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="打印"/>
    </LinearLayout>
</LinearLayout>