<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_home"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa">

        <LinearLayout
            android:id="@+id/lLayout_count_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eceff1"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:id="@+id/count_oil_Id"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:padding="4dp"-->
<!--                android:textAppearance="?attr/textAppearanceListItem"-->
<!--                android:textSize="20sp" />-->

            <TextView
                android:id="@+id/count_oil_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/count_item_Money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lLayout_count_item"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/oil_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/count_item_Money"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>