<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountFragment">

    <LinearLayout
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_date2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="起始时间" />
        <Button
            android:id="@+id/end_date2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="终止时间" />
    </LinearLayout>

    <Button
        android:id="@+id/count_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/date_picker"
        android:text="查询" />

    <TextView
        android:id="@+id/sum_oil_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count_search_btn"
        android:text="加油总额" />
    <TextView
        android:id="@+id/sum_money_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sum_oil_money"
        android:layout_below="@id/count_search_btn"
        android:text="100"/>
    <TextView
        android:id="@+id/sum_oil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单数"
        android:layout_below="@id/sum_oil_money"/>

    <TextView
        android:id="@+id/sum_trac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sum_oil_money"
        android:layout_toEndOf="@id/sum_oil"
        android:text="10"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sum_oil"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/print"/>
    </LinearLayout>


</RelativeLayout>