<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/setting_fragment_container">

    <TextView
        android:id="@+id/set_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本号"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_above="@+id/set_version"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/print_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:layout_marginTop="120dp"
        android:checked="true"
        android:text="打印:"
        android:textOff="OFF"
        android:textOn="ON"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_print"
        android:layout_below="@+id/print_switch"
        android:text="测试"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/voice_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:layout_marginTop="120dp"
        android:checked="true"
        android:text="语音:"
        android:textOff="OFF"
        android:textOn="ON"
        android:layout_below="@+id/check_print"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_voice"
        android:layout_below="@+id/voice_switch"
        android:text="测试"/>

    <FrameLayout
        android:id="@+id/frameLayout_set"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>