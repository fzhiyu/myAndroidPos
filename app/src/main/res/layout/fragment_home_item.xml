<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_home"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp"
    android:background="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fafafa">

        <TextView
            android:id="@+id/tv_homeItem_oilOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20sp"
            android:background="#eceff1"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/tv_homeItem_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_homeItem_oilOrderId"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/tv_homeItem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_homeItem_oil"
            android:layout_marginLeft="170dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/tv_homeItem_oilOrderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_homeItem_oil"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <TextView
            android:id="@+id/tv_homeItem_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_homeItem_oilOrderTime"
            android:layout_marginLeft="170dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textSize="12dp"
            android:textAppearance="?attr/textAppearanceListItem"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>