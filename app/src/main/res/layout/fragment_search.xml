<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SearchFragment"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/search_dataPicker">

        <EditText
            android:id="@+id/search_searStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="开始时间" />

        <EditText
            android:id="@+id/search_searEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="结束时间" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_key"
        android:layout_below="@+id/search_dataPicker"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <top.androidman.SuperButton
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:id="@+id/search_past_hour"
                android:layout_marginLeft="10dp"
                app:color_normal="@color/lightBlue"
                app:text="过去一小时"
                app:textSize="10sp"
                app:textColor="@color/white"
                app:corner="15dp" />
            <top.androidman.SuperButton
                android:id="@+id/search_today"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                app:color_normal="@color/lightBlue"
                app:text="今天"
                app:textSize="10sp"
                app:textColor="@color/white"
                app:corner="15dp"/>
            <top.androidman.SuperButton
                android:id="@+id/search_week"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                app:color_normal="@color/lightBlue"
                app:text="本周"
                app:textSize="10sp"
                app:textColor="@color/white"
                app:corner="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_key"
        android:id="@+id/search_button">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/search_btn_search"
            android:text="查询"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_item_list"
        android:name="com.cuse.myandroidpos.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_button"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context="com.cuse.myandroidpos.ItemDetailHostActivity"
        tools:listitem="@layout/fragment_home_item_content" />


</RelativeLayout>